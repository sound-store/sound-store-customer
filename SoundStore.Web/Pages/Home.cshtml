@* CLICK ACTION ON SLIDER *@
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const swiper = new Swiper('.main-swiper', {
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    });

    document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.headphones-swiper', {
            slidesPerView: 1.2,
            spaceBetween: 16,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                576: { slidesPerView: 2 },
                768: { slidesPerView: 3 },
                1200: { slidesPerView: 4 }
            }
        });
    });

    document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.speakers-swiper', {
            slidesPerView: 1.2,
            spaceBetween: 16,
            navigation: {
                nextEl: '.speakers-next',
                prevEl: '.speakers-prev',
            },
            breakpoints: {
                576: { slidesPerView: 2 },
                768: { slidesPerView: 3 },
                1200: { slidesPerView: 4 }
            }
        });
    });
</script>
