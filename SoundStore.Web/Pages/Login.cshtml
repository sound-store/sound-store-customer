@page
@model SoundStore.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card p-5 shadow rounded-4" style="width: 100%; max-width: 400px; margin-top:6vh">
        <div class="mb-4 text-center">
            <img src="/img/logo-with-name.png" alt="SoundStore Logo" width="80" class="mb-2" />
            <h6 class="text-muted">Please enter your details</h6>
            <h2 class="fw-bold mb-4">Welcome back</h2>
        </div>

        <form method="post">

            <div class="mb-3">
                <input asp-for="LoginRequest.Email" class="form-control rounded-3" placeholder="Email address" required />
            </div>
            <div class="mb-3">
                <input asp-for="LoginRequest.Password" class="form-control rounded-3" placeholder="Password" type="password" required />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember for 30 days</label>
                </div>
                <a asp-page="#" class="text-primary text-decoration-underline small">Forgot password</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-3 mb-3">Login</button>
            @* TODO: Implement SSO with Google later *@
            <button type="button" class="btn btn-outline-secondary w-100 rounded-3 d-flex align-items-center justify-content-center gap-2">
                <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png" width="18" />
                Sign in with Google
            </button>

            <p class="text-center mt-4 small">
                Don’t have an account?
                <a asp-page="/Register" class="text-primary text-decoration-underline fw-semibold">Sign up</a>
            </p>
        </form>

        @* Display error message here *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start rounded-3 py-2 px-3 small"></div>
    </div>
</div>