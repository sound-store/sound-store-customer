@page
@model SoundStore.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="container py-5">
        <div class="mx-auto card p-5 shadow rounded-4" style="width: 100%; max-width: 500px;">
            <div class="text-center mb-4">
                <img src="/img/logo-with-name.png" alt="SoundStore Logo" width="80" class="mb-2" />
                <h6 class="text-muted">Create your account</h6>
                <h2 class="fw-bold mb-4">Register</h2>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <input asp-for="Input.FirstName" class="form-control rounded-3" placeholder="First name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <input asp-for="Input.LastName" class="form-control rounded-3" placeholder="Last name" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.Address" class="form-control rounded-3" placeholder="Address" />
                    <span asp-validation-for="Input.Address" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.DateOfBirth" type="date" class="form-control rounded-3" placeholder="Date of birth" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control rounded-3" placeholder="Phone number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.Password" class="form-control rounded-3" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" placeholder="Confirm password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-3 mb-3">Register</button>

                <p class="text-center mt-3 small">
                    Already have an account?
                    <a asp-page="/Login" class="text-primary text-decoration-underline fw-semibold">Sign in</a>
                </p>
            </form>
        </div>
    </div>
</div>
