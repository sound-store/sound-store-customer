@page
@model SoundStore.Web.Pages.HeadphonesModel
@{
    ViewData["Title"] = "Tai nghe Marshall";
}
<!-- Hero Banner -->
<section class="hero-banner position-relative text-white text-center" style="height: 80vh; background: url('https://soundway.vn/wp-content/uploads/2025/01/tai-nghe-marshall-background-scaled.webp') center center / cover no-repeat;">
    <div class="position-absolute top-50 start-50 translate-middle">
        <h1 class="display-4 fw-bold">TAI NGHE MARSHALL</h1>
        <p class="lead fw-semibold text-white">Khám phá tai nghe Marshall chất lượng cao của chúng tôi</p>
    </div>
</section>

<!-- Headphones Grid -->
<section class="products-container mt-3">
    <div class="container">
        <div class="row g-4">
            @* Inject each product in the card *@
            @foreach (var product in Model.Headphones.Items)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a asp-page="/ProductDetail" asp-route-productId="@product.Id" class="text-decoration-none">
                        @await Html.PartialAsync("_ProductCard", product)
                    </a>
                </div>
            }
        </div>

