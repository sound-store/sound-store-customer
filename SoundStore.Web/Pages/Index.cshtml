@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<!-- Billboard section -->
<section id="billboard" class="position-relative overflow-hidden bg-light-blue">
    <div class="swiper main-swiper">
        <div class="swiper-wrapper">

            <div class="swiper-slide">
                <div class="image-holder">
                    <img src="https://images.ctfassets.net/javen7msabdh/6Xfy9eFoHgaxAIlEuTaaGD/d366fe86e3a1fbab93ab1808851d892f/jukebox_homepage_placement-c-desktop.jpeg?w=1500&fm=avif&q=100" alt="Marshall Banner 1" class="img-fluid w-100">
                </div>
            </div>

            <div class="swiper-slide">
                <div class="image-holder">
                    <img src="https://images.ctfassets.net/javen7msabdh/6jDCF8W50DFDBTUAjClS25/2d03129bbba561261ff30b8c66a46e1e/marshall-pedals-single-width-homepage-16_9-A.jpg?w=1900&fm=avif&q=100" alt="Marshall Speakers" class="img-fluid w-100">
                </div>
            </div>

            <div class="swiper-slide">
                <div class="image-holder">
                    <img src="https://images.ctfassets.net/javen7msabdh/5a3jpdxIqxXj0ZVNDaU7ul/913f5541a878e31cdeb829042612138f/stories-single-asset-desktop.jpeg?w=1500&fm=avif&q=100" alt="Marshall Stories" class="img-fluid w-100">
                </div>
            </div>

            <div class="swiper-slide">
                <div class="image-holder">
                    <img src="https://images.ctfassets.net/javen7msabdh/p9YHetykd7DU2KF9KVtGh/0b9d1f826d5575f48dc9fd4719d13926/partnerships-single-asset-desktop.jpeg?w=1500&fm=avif&q=100" alt="Marshall Partnerships" class="img-fluid w-100">
                </div>
            </div>

        </div>
    </div>

    <!-- Swiper Arrows -->
    <div class="swiper-icon swiper-arrow swiper-arrow-prev">
        <svg class="chevron-left">
            <use xlink:href="#chevron-left" />
        </svg>
    </div>
    <div class="swiper-icon swiper-arrow swiper-arrow-next">
        <svg class="chevron-right">
            <use xlink:href="#chevron-right" />
        </svg>
    </div>
</section>

<!-- Featured speakers -->
<section id="mobile-products" class="product-store position-relative padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">LOA MARSHALL</h2>
                <div class="btn-right">
                    <a asp-page="/Speakers" asp-route-categoryId="1" class="btn btn-medium btn-normal text-uppercase">Go to Shop</a>
                </div>
            </div>
            <div class="swiper product-swiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.Speakers)
                    {
                        <div class="swiper-slide d-flex justify-content-center">
                            <a asp-page="/ProductDetail" asp-route-productId="@item.Id" class="text-decoration-none">
                                @await Html.PartialAsync("_ProductCard", item)
                            </a>
                        </div>
                        <a asp-page="/ProductDetail" asp-route-productId="">
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="swiper-pagination position-absolute text-center"></div>
</section>

<!-- Featured headphones -->
<section id="smart-watches" class="product-store padding-large position-relative">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">TAI NGHE MARSHALL</h2>
                <div class="btn-right">
                    <a asp-page="/Headphones" asp-route-categoryId="2" class="btn btn-medium btn-normal text-uppercase">Go to Shop</a>
                </div>
            </div>
            <div class="swiper product-watch-swiper">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.Headphones)
                    {
                        <div class="swiper-slide d-flex justify-content-center">
                            <a asp-page="/ProductDetail" asp-route-productId="@item.Id" class="text-decoration-none">
                                @await Html.PartialAsync("_ProductCard", item)
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="swiper-pagination position-absolute text-center"></div>
</section>

<!-- Blog section -->
<section id="latest-blog" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Latest Posts</h2>
                <div class="btn-right">
                    <a href="blog.html" class="btn btn-medium btn-normal text-uppercase">Read Blog</a>
                </div>
            </div>
            <div class="post-grid d-flex flex-wrap justify-content-between">

                <!-- Bài viết 1 -->
                <div class="col-lg-4 col-sm-12">
                    <div class="card border-none me-3">
                        <div class="card-image">
                            <img src="https://soundway.vn/wp-content/uploads/2024/10/2.png" alt="Marshall Stanmore III" class="img-fluid">
                        </div>
                    </div>
                    <div class="card-body text-uppercase">
                        <div class="card-meta text-muted">
                            <span class="meta-date">Mar 12, 2025</span>
                            <span class="meta-category">- Loa Marshall</span>
                        </div>
                        <h3 class="card-title">
                            <a href="#">Đánh Giá Marshall Stanmore III: Thiết Kế & Âm Thanh Vượt Trội</a>
                        </h3>
                    </div>
                </div>

                <!-- Bài viết 2 -->
                <div class="col-lg-4 col-sm-12">
                    <div class="card border-none me-3">
                        <div class="card-image ratio ratio-1x1 overflow-hidden">
                            <img src="https://soundway.vn/wp-content/uploads/2021/09/Tang-ngay-01-goi-Marshall-11.png" alt="Marshall Major IV" class="img-fluid">
                        </div>
                    </div>
                    <div class="card-body text-uppercase">
                        <div class="card-meta text-muted">
                            <span class="meta-date">Mar 10, 2025</span>
                            <span class="meta-category">- Tai nghe</span>
                        </div>
                        <h3 class="card-title">
                            <a href="#">Marshall Major IV Có Thật Sự Đáng Tiền?</a>
                        </h3>
                    </div>
                </div>

                <!-- Bài viết 3 -->
                <div class="col-lg-4 col-sm-12">
                    <div class="card border-none me-3">
                        <div class="card-image">
                            <img src="https://minhtuanmobile.com/uploads/products/chan-de-loa-marshall-230410111848.png" alt="Phụ kiện Marshall" class="img-fluid">
                        </div>
                    </div>
                    <div class="card-body text-uppercase">
                        <div class="card-meta text-muted">
                            <span class="meta-date">Mar 8, 2025</span>
                            <span class="meta-category">- Phụ kiện</span>
                        </div>
                        <h3 class="card-title">
                            <a href="#">Top Phụ Kiện Marshall Không Thể Thiếu Khi Đi Du Lịch</a>
                        </h3>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
